/**index.wxss**/

.chart-canvas {
  height: 300px;
  top: 0;
}

.weui-panel__hd {
  color: #353535;
  font-size: 16px;
  font-weight: bolder;
  position: unset;
}

page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    text-align: left;
}

#mychart-dom-line {
  height: 220px;
  display: block;
}

.weui-panel_padding {
  padding-left: 15px;
  padding-right: 15px;
}

.weui-panel__hd {
  padding-left: 0px;
}

.weui-grids {
  margin-bottom: 10px;
}

.more-market-btn{
  margin-top: -10px;
  margin-bottom: 10px;
  font-size: 16px;
}

.query-hint {
  font-size: 13px;
  margin-bottom: 10px;
}

.see-more {
  position: absolute;
  right: 20px;
  font-size: 12px;
  color: #888;
}

.xltab {
  right: 15px;
  text-align: right;
  font-size: 11px;
  line-height: 16px;
}

.xltab .cur {
    background: #c23531;
    color: #fff;
    border: 1px #c23531 solid;
}

.xltab text {
  display: inline-block;
  padding: 0 8px;
  border: 1px #ebebeb solid;
  margin-left: -1px;
  color: #777;
}